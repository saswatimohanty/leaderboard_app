<div class = 'col-sm-5 form-inline'>
  <%= f.label :name, 'Your Name' %>
  <%= f.text_field :name, placeholder: 'Enter Your Name', required: true, class: 'form-control' %>
</div>
<div class = 'col-sm-5 form-inline'>
  <%= f.label :username, 'GitHub Username' %>
  <%= f.text_field :username, placeholder: 'Your GitHub Username', required: true, class: 'form-control' %>
</div>
<div class = 'col-md-4 button-position'>
  <%= f.submit 'Add to Leaderboard', class: 'button' %>
</div>